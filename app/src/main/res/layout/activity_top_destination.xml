<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demsmobile.vanpedia.TopDestinationActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff" >


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="236dp"
                android:id="@+id/imgMain"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="30dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/name"
                android:paddingLeft="5dp"
                android:layout_below="@+id/imgMain"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/address"
                android:layout_below="@+id/name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:id="@+id/phone"
                android:layout_below="@+id/address"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:textSize="20dp"
                android:paddingLeft="5dp"
                android:id="@+id/website"
                android:layout_below="@+id/phone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/website"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout"
                android:background="#80003366">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/imgCall"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/call"
                    android:onClick="process"
                    android:background="#80003366"
                    android:backgroundTint="#14676767" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgHomePage"
                    android:background="#80003366"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/globehome"
                    android:onClick="process"
                    android:backgroundTint="#14666666" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#80003366"
                    android:layout_marginRight="50dp"
                    android:id="@+id/imgMail"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/mail"
                    android:onClick="process"
                    android:backgroundTint="#14666666" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textSize="18dp"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
    </ScrollView>
</LinearLayout>