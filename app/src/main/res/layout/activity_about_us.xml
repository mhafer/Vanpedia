<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demsmobile.vanpedia.AboutUsActivity"
    android:background="#ff080808"
    >


    <ImageView
        android:id="@+id/imgAboutUs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gastownally" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vanpedia is a local platform for everything Vancouver"
        android:textColor="#ffffff"
        android:id="@+id/textView2"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="0.01"
        android:gravity="center"
        android:backgroundTintMode="src_over"
        android:textSize="26dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="#70080808"
        android:layout_above="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="We connect you with the best food, places, and entertainment Vancouver has to offer"
        android:textColor="#ffffff"
        android:id="@+id/textView3"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="0.01"
        android:textAlignment="center"
        android:textSize="22dp"
        android:gravity="center"
        android:layout_marginBottom="99dp"
        android:backgroundTintMode="src_over"
        android:background="#8e080808"
        android:layout_above="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Copyright DEMSmobile"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
