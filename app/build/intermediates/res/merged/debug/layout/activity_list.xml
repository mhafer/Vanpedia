<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000"
    android:id="@+id/subCategoryListPlaces"
    tools:context="com.demsmobile.vanpedia.LsitActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/activityListHolderIcon"
            android:layout_margin="10dp"
            android:scaleType="fitCenter" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/listViewSubCategoryPlacesResultTitle"
            android:layout_height="wrap_content"
            android:text="WWWW"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/activityListHolderIcon"
            android:layout_toEndOf="@+id/activityListHolderIcon" />
    </RelativeLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:background="#00ffffff">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listViewSubCategoryPlacesResult"
                android:layout_centerHorizontal="true"

                android:background="#96000000" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>